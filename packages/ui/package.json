{
  "name": "ui",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && npx tailwindcss -i ./globals.css -o ./dist/globals.css",
    "dev": "tsup --watch",
    "lint": "eslint --max-warnings 0 .",
    "lint-fix": "eslint --fix .",
    "tsc": "tsc -p tsconfig.json",
    "test": "jest --verbose",
    "test-watch": "jest --verbose --watch",
    "test-coverage": "jest --coverage --verbose",
    "storybook": "concurrently \"npm:watch:*\"",
    "storybook-build": "concurrently \"npm:build:*\"",
    "build:css": "npx tailwindcss -i ./globals.css -o ./public/globals.css",
    "build:storybook": "build-storybook -o build-storybook-static",
    "watch:css": "npx tailwindcss -i ./globals.css -o ./public/globals.css --watch",
    "watch:storybook": "start-storybook -p 6200 --quiet",
    "update-dependencies": "npx npm-check-updates -u"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "utils-version": "*"
  },
  "devDependencies": {
    "@types/node": "18.11.17",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "config-storybook": "*",
    "config-tsconfig": "*",
    "postcss": "^8.4.20",
    "tailwindcss": "^3.2.4",
    "tsup": "6.5.0",
    "utils-test": "*"
  }
}
