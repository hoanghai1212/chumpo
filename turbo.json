{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build",
        "^db:generate"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "storybook-build": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "build-storybook-static/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "build"
      ]
    },
    "tsc": {
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ]
    },
    "storybook": {
      "dependsOn": [
        "build"
      ]
    },
    "dev": {
      "dependsOn": [
        "^db:generate"
      ],
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "update-dependencies": {
      "cache": false
    }
  }
}